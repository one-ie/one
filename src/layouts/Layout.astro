---
import {
  Maximize2,
  MessageSquare,
  PanelLeftClose,
  X,
} from "lucide-react";
import { Sidebar } from "@/components/Sidebar";
import { MyThread } from "@/components/Chat";
import { LayoutInit } from "@/components/LayoutInit";
import ThemeInit from "@/components/ThemeInit.astro";
import { type ChatConfig, createDefaultConfig } from "@/lib/chatConfig";
import { ChatConfigSchema } from '../lib/chatConfig';

import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  children: any;
}

const {
  title,
  description = "ONE",
} = Astro.props;

// You can override any default values here
const chatConfig = ChatConfigSchema.parse({
  systemPrompt: [{
    type: "text" as const,
    text: "Say XXX as every reply "
  }],
  welcome: {
    message: "I am Agent ONE. How can I help you today?",
    avatar: "/icon.svg",
    suggestions: [
      {
        label: "Tell me about ONE",
        prompt: "What is ONE and how can it help me?"
      },
      {
        label: "Get Started",
        prompt: "How do I get started with ONE?"
      }
    ]
  }
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

<ThemeInit />
  </head>

  <body class="min-h-screen bg-background font-sans antialiased touch-none">
    <div class="flex h-screen optimize-gpu overflow-auto">
      <div id="left-sidebar" class="w-[64px] shrink-0 border-r mobile:fixed mobile:z-50 mobile:transition-transform mobile:duration-300 mobile:translate-x-[-64px] mobile:data-[open=true]:translate-x-0">
        <Sidebar client:load />
      </div>

      <div class="flex-1 flex flex-col min-w-0 mobile:pl-0">
        <header
          id="top-header"
          class="h-16 min-h-[64px] max-h-[64px] border-b flex items-center px-6 gap-4 bg-background"
        >
          
          <div class="flex-1 flex justify-center">
            <img src="/logo-dark.png" alt="Logo" class="h-10 dark:hidden" />
            <img src="/logo.svg" alt="Logo" class="h-10 hidden dark:block" />
          </div>
          <button
            id="toggle-right"
            class="p-2 hover:bg-accent rounded-lg"
            onclick="document.getElementById('right-panel').classList.remove('right-panel-closed'); document.getElementById('right-panel').classList.add('right-panel-quarter', 'right-panel-enter');"
          >
            <MessageSquare className="h-4 w-4" />
          </button>
        </header>

        <main class="flex-1 p-6">
          <slot />
        </main>

        <footer
          id="bottom-footer"
          class="h-12 border-t flex items-center px-6 text-sm text-muted-foreground"
        >
          Â© 2025 Your Company Name
        </footer>
      </div>

      <div
        id="right-panel"
        class="border-l flex flex-col w-[400px] transition-all duration-300 ease-in-out transform mobile:fixed mobile:right-0 mobile:top-0 mobile:bottom-0 mobile:z-50 mobile:w-full mobile:translate-x-full mobile:data-[open=true]:translate-x-0"
      >
        <div class="p-4 flex justify-between border-b">
          <div class="flex gap-2">
            <button id="right-full" class="p-2 hover:bg-accent rounded-lg"
              ><Maximize2 className="h-4 w-4" /></button
            >
            <button id="right-half" class="p-2 hover:bg-accent rounded-lg"
              ><PanelLeftClose className="h-4 w-4" /></button
            >
          </div>
          <button id="right-close" class="p-2 hover:bg-accent rounded-lg"
            ><X className="h-4 w-4" /></button
          >
        </div>
        <div class="chat-window flex justify-center">
          <div class="w-full max-w-[900px] pt-8">
            <MyThread client:load config={chatConfig} />
          </div>
        </div>
      </div>
    </div>

    <LayoutInit client:load />
  </body>
</html>
