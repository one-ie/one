---
import {
  Maximize2,
  MessageSquare,
  X,
} from "lucide-react";
import { SidebarWrapper } from "@/components/SidebarWrapper";
import { MyThread } from "@/components/Chat";
import { LayoutInit } from "@/components/LayoutInit";
import ThemeInit from "@/components/ThemeInit.astro";
import { ChatConfigSchema } from '../lib/chatConfig';

import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  children: any;
  chatConfig?: any;
}

const {
  title,
  description = "ONE",
  chatConfig: providedConfig,
} = Astro.props;

// Default chat config that can be overridden
const defaultChatConfig = {
  systemPrompt: [{
    type: "text" as const,
    text: "Say XXX as every reply "
  }],
  welcome: {
    message: "I am Agent ONE. How can I help you today?",
    avatar: "/icon.svg",
    suggestions: [
      {
        label: "Tell me about ONE",
        prompt: "What is ONE and how can it help me?"
      },
      {
        label: "Get Started",
        prompt: "How do I get started with ONE?"
      }
    ]
  }
};

const chatConfig = ChatConfigSchema.parse(providedConfig || defaultChatConfig);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <ThemeInit />
  </head>

  <body class="min-h-screen bg-background font-sans antialiased touch-none">
    <SidebarWrapper client:load>
      <header
        id="top-header"
        class="h-16 min-h-[64px] max-h-[64px] border-b flex items-center px-6 bg-background"
      >
          <img src="/logo-dark.png" alt="ONE" class="h-8 w-auto dark:hidden" />
          <img src="/logo.png" alt="ONE" class="h-8 w-auto hidden dark:block" />
      </header>

      <div class="flex-1 flex">
        <div class="flex-1 overflow-auto">
          <main class="flex-1 py-8 px-6">
            <slot />
          </main>
          <footer class="py-6 px-6 text-center text-sm text-muted-foreground border-t">
            Â© 2025 Your Company Name
          </footer>
        </div>

        <div
          id="right-panel"
          class="border-l flex flex-col w-[400px] transition-all duration-300 ease-in-out transform mobile:fixed mobile:right-0 mobile:top-0 mobile:bottom-0 mobile:z-50 mobile:w-full mobile:translate-x-full mobile:data-[open=true]:translate-x-0"
        >
          <div class="p-4 flex justify-between border-b">
            <div class="flex gap-2">
              <button id="right-full" class="p-2 hover:bg-accent rounded-lg"
                ><Maximize2 className="h-4 w-4" /></button
              >
            </div>
            <button id="right-close" class="p-2 hover:bg-accent rounded-lg"
              ><X className="h-4 w-4" /></button
            >
          </div>
          <div class="chat-window flex justify-center">
            <div class="w-full max-w-[900px] pt-8">
              <MyThread client:load config={chatConfig} />
            </div>
          </div>
        </div>
      </div>

      <LayoutInit client:load />
    </SidebarWrapper>
  </body>
</html>
