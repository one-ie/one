---
import Layout from "../layouts/Landing.astro";
---

<Layout 
  title="Bitcoin Conference 2025 - The Future of Finance"
  description="Join the world's leading Bitcoin experts and innovators for a three-day conference exploring the future of decentralized finance."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-orange-500 to-amber-600 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Bitcoin Conference 2025</h1>
        <p class="text-xl md:text-2xl mb-8">The Future of Finance Is Decentralized</p>
        <div class="flex flex-col md:flex-row gap-4 justify-center">
          <p class="text-lg"><span class="font-semibold">📅 September 15-17, 2025</span></p>
          <p class="text-lg"><span class="font-semibold">📍 Miami Convention Center</span></p>
        </div>
        <a href="#tickets" class="inline-block bg-white text-orange-600 px-8 py-3 rounded-full font-semibold text-lg mt-8 hover:bg-orange-100 transition-colors">
          Reserve Your Spot
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Speakers -->
  <section class="py-20 bg-white" id="speakers">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">Featured Speakers</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {[
          {
            name: "Sarah Anderson",
            role: "CEO, BitTech Solutions",
            image: "https://api.dicebear.com/7.x/personas/svg?seed=sarah",
            topic: "The Future of Bitcoin Adoption"
          },
          {
            name: "Michael Chen",
            role: "Blockchain Researcher",
            image: "https://api.dicebear.com/7.x/personas/svg?seed=michael",
            topic: "Scaling Solutions for Bitcoin"
          },
          {
            name: "Elena Rodriguez",
            role: "Crypto Economics Expert",
            image: "https://api.dicebear.com/7.x/personas/svg?seed=elena",
            topic: "Bitcoin's Role in Global Finance"
          }
        ].map(speaker => (
          <div class="bg-gray-50 rounded-lg p-6 text-center">
            <img src={speaker.image} alt={speaker.name} class="w-32 h-32 mx-auto rounded-full mb-4" />
            <h3 class="text-xl font-semibold mb-2">{speaker.name}</h3>
            <p class="text-gray-600 mb-2">{speaker.role}</p>
            <p class="text-orange-600">"{speaker.topic}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Schedule Highlights -->
  <section class="py-20 bg-gray-50" id="schedule">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">Schedule Highlights</h2>
      <div class="max-w-3xl mx-auto space-y-6">
        {[
          {
            day: "Day 1",
            date: "September 15",
            events: [
              "Opening Ceremony - 9:00 AM",
              "Keynote: The Future of Bitcoin - 10:00 AM",
              "Panel: Institutional Adoption - 2:00 PM"
            ]
          },
          {
            day: "Day 2",
            date: "September 16",
            events: [
              "Technical Workshops - 9:00 AM",
              "Bitcoin Development - 11:00 AM",
              "Lightning Network Updates - 2:00 PM"
            ]
          },
          {
            day: "Day 3",
            date: "September 17",
            events: [
              "Investment Strategies - 9:00 AM",
              "Future of Digital Currency - 11:00 AM",
              "Closing Ceremony - 4:00 PM"
            ]
          }
        ].map(day => (
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <h3 class="text-xl font-semibold text-orange-600 mb-2">{day.day} - {day.date}</h3>
            <ul class="space-y-2">
              {day.events.map(event => (
                <li class="text-gray-700">• {event}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Tickets -->
  <section class="py-20 bg-white" id="tickets">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">Get Your Tickets</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {[
          {
            type: "Early Bird",
            price: "$499",
            features: ["All Sessions", "Workshop Access", "Networking Events", "Digital Materials"]
          },
          {
            type: "Regular",
            price: "$699",
            features: ["All Sessions", "Workshop Access", "Networking Events", "Digital Materials", "VIP Lounge Access"]
          },
          {
            type: "VIP",
            price: "$999",
            features: ["All Sessions", "Workshop Access", "Networking Events", "Digital Materials", "VIP Lounge Access", "Speakers Dinner"]
          }
        ].map(ticket => (
          <div class="border-2 rounded-lg p-8 text-center hover:border-orange-500 transition-colors">
            <h3 class="text-2xl font-bold mb-4">{ticket.type}</h3>
            <p class="text-4xl font-bold text-orange-600 mb-6">{ticket.price}</p>
            <ul class="space-y-3 mb-8">
              {ticket.features.map(feature => (
                <li class="text-gray-700">✓ {feature}</li>
              ))}
            </ul>
            <button class="bg-orange-500 text-white px-8 py-3 rounded-full font-semibold hover:bg-orange-600 transition-colors">
              Register Now
            </button>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Venue -->
  <section class="py-20 bg-gray-50" id="venue">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">Venue Information</h2>
      <div class="max-w-4xl mx-auto bg-white rounded-lg overflow-hidden shadow-sm">
        <div class="p-8">
          <h3 class="text-2xl font-semibold mb-4">Miami Convention Center</h3>
          <p class="text-gray-600 mb-4">Join us at the heart of Miami's vibrant business district</p>
          <div class="space-y-2 text-gray-700">
            <p>📍 1001 Convention Center Dr, Miami, FL</p>
            <p>🚗 Parking available on-site</p>
            <p>🚇 5 minutes walk from Downtown Metro Station</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="py-20 bg-orange-500 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Stay Updated</h2>
        <p class="mb-8">Subscribe to our newsletter for conference updates and special announcements</p>
        <form class="flex flex-col md:flex-row gap-4 justify-center">
          <input
            type="email"
            placeholder="Enter your email"
            class="px-6 py-3 rounded-full text-gray-900 w-full md:w-auto"
          />
          <button class="bg-gray-900 text-white px-8 py-3 rounded-full font-semibold hover:bg-gray-800 transition-colors">
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>