---
import Layout from "../layouts/Layout.astro";
import { Button } from "../components/ui/button";
import { Card } from "../components/ui/card";
import CryptoPayment from "../components/CryptoPayment";
import { Shield, Zap, Rocket } from "lucide-react";

const plans = [
    {
        name: "Starter",
        price: 499,
        description: "Perfect for getting started with crypto",
        features: [
            "Basic AI chat integration",
            "Community management",
            "Real-time price alerts",
            "24/7 support",
        ],
        icon: Shield,
    },
    {
        name: "Pro",
        price: 999,
        description: "Advanced features for growing projects",
        features: [
            "Advanced AI integration",
            "Custom automation",
            "Market analysis",
            "Priority support",
            "Multi-chain support",
        ],
        icon: Zap,
    },
    {
        name: "Enterprise",
        price: 2499,
        description: "Full-scale infrastructure solution",
        features: [
            "Custom AI models",
            "Dedicated infrastructure",
            "White-label solution",
            "24/7 priority support",
            "Custom development",
        ],
        icon: Rocket,
    },
];
---

<Layout
    title="Crypto Payment Options"
    description="Explore cryptocurrency payment integration options"
>
    <div class="container mx-auto px-4 py-16">
        <div class="text-center mb-16">
            <h1 class="text-4xl font-bold mb-4">Choose Your Plan</h1>
            <p class="text-xl text-muted-foreground">
                Pay with your preferred cryptocurrency
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-16">
            {
                plans.map((plan) => (
                    <Card className="p-6 flex flex-col">
                        <div class="mb-8">
                            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
                                <plan.icon className="w-6 h-6 text-primary" />
                            </div>
                            <h2 class="text-2xl font-bold mb-2">{plan.name}</h2>
                            <div class="mb-4">
                                <span class="text-3xl font-bold">
                                    ${plan.price}
                                </span>
                                <span class="text-muted-foreground">
                                    /month
                                </span>
                            </div>
                            <p class="text-muted-foreground mb-4">
                                {plan.description}
                            </p>
                        </div>

                        <div class="flex-grow">
                            <ul class="space-y-2 mb-8">
                                {plan.features.map((feature) => (
                                    <li class="flex items-center gap-2">
                                        <Shield className="w-4 h-4 text-primary" />
                                        <span>{feature}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div>
                            <CryptoPayment
                                client:load
                                orderId={`${plan.name.toLowerCase()}_${Date.now()}`}
                                amount={plan.price}
                                currency="USD"
                            />
                        </div>
                    </Card>
                ))
            }
        </div>

        <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-2xl font-bold mb-4">Secure Crypto Payments</h2>
            <p class="text-muted-foreground mb-8">
                We accept Bitcoin (BTC), Ethereum (ETH), and Solana (SOL). All
                payments are processed securely and verified on-chain. Choose
                your preferred cryptocurrency at checkout.
            </p>

            <div class="grid grid-cols-3 gap-4">
                <div class="p-4 rounded-lg bg-muted">
                    <img
                        src="/btc-logo.svg"
                        alt="Bitcoin"
                        class="w-12 h-12 mx-auto mb-2"
                    />
                    <div class="font-semibold">Bitcoin</div>
                </div>
                <div class="p-4 rounded-lg bg-muted">
                    <img
                        src="/eth-logo.svg"
                        alt="Ethereum"
                        class="w-12 h-12 mx-auto mb-2"
                    />
                    <div class="font-semibold">Ethereum</div>
                </div>
                <div class="p-4 rounded-lg bg-muted">
                    <img
                        src="/sol-logo.svg"
                        alt="Solana"
                        class="w-12 h-12 mx-auto mb-2"
                    />
                    <div class="font-semibold">Solana</div>
                </div>
            </div>
        </div>
    </div>
</Layout>

