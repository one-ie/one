---
import NewLayout from "../layouts/New.astro";
import { HeroGeometric } from "../components/ui/shape-landing-hero";
---

<NewLayout 
    defaultWidth="half"
    defaultOpen={true}
>
    <main>
        <!-- Hero Section -->
        <HeroGeometric
            client:load
            badge="AI-Powered Development"
            title1="Build AI-Powered"
            title2="Websites & Apps"
        />

        <!-- Features Grid -->
        <section class="py-16 max-w-6xl mx-auto px-4">
            <div class="grid md:grid-cols-3 gap-8">
                <div class="p-6 rounded-lg border bg-card">
                    <div class="w-12 h-12 rounded-full bg-blue-600/10 flex items-center justify-center mb-4">
                        <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-4l-4 4z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">24/7 Customer Support</h3>
                    <p class="text-muted-foreground">AI chat agents that handle customer inquiries automatically</p>
                </div>

                <div class="p-6 rounded-lg border bg-card">
                    <div class="w-12 h-12 rounded-full bg-blue-600/10 flex items-center justify-center mb-4">
                        <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Content Generation</h3>
                    <p class="text-muted-foreground">Auto-generate blog posts, product descriptions, and more</p>
                </div>

                <div class="p-6 rounded-lg border bg-card">
                    <div class="w-12 h-12 rounded-full bg-blue-600/10 flex items-center justify-center mb-4">
                        <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Easy Integration</h3>
                    <p class="text-muted-foreground">Add to any website with just a few lines of code</p>
                </div>
            </div>
        </section>
    </main>
</NewLayout>

<style>
    .text-gradient {
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-image: linear-gradient(45deg, #4F46E5, #06B6D4);
    }
</style>